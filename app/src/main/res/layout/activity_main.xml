<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/QuesNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Questions Attempted: "
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Ques"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/QuesNum"
        android:layout_marginTop="40dp"
        android:text="Questions ?"
        android:textAlignment="center"
        android:textColor="@color/pastel_pink"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/prev"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_above="@id/mcqAnswer"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/pastel_pink"
        app:srcCompat="@drawable/ic_prev"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_above="@id/mcqAnswer"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/pastel_pink"
        app:srcCompat="@drawable/ic_next"
        tools:ignore="SpeakableTextPresentCheck" />


    <LinearLayout
        android:id="@+id/mcqAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:backgroundTint="@color/pastel_pink"
            android:padding="10dp"
            android:text="1. Option"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/chestNut"
            android:textSize="20sp" />

        <Button
            android:id="@+id/option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:backgroundTint="@color/pastel_pink"
            android:padding="10dp"
            android:text="2. Option"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/chestNut"
            android:textSize="20sp" />

        <Button
            android:id="@+id/option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:backgroundTint="@color/pastel_pink"
            android:padding="10dp"
            android:text="3. Option"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/chestNut"
            android:textSize="20sp" />

        <Button
            android:id="@+id/option4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:backgroundTint="@color/pastel_pink"
            android:padding="10dp"
            android:text="4. Option"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/chestNut"
            android:textSize="20sp" />

    </LinearLayout>

</RelativeLayout>
